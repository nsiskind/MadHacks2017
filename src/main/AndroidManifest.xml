<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.noah.mytravelbook">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Main2Activity" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".Destination"
            android:label="@string/title_activity_destination"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FriendsAtDestination"
            android:label="@string/title_activity_friends_at_destination"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Friend_List"
            android:label="@string/title_activity_friend__list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Reviews"
            android:label="@string/title_activity_reviews"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GlobalReview"
            android:label="@string/title_activity_global_review"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ExampleReview"
            android:label="@string/title_activity_example_review"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>